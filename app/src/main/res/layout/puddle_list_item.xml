<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/grid_item">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp">
        <ImageView
            android:id="@+id/puddle_image"
            android:layout_width="60dp"
            android:layout_height="70dp"
            tool:src="@drawable/ic_launcher_foreground"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:layout_weight="2">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/label_style"
                        android:id="@+id/puddle_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/puddle_name" />
                    <TextView
                        android:id="@+id/puddle_name_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tool:text="shit" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/label_style"
                        android:id="@+id/puddle_initiator_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/puddle_initiator_name" />
                    <TextView
                        android:id="@+id/puddle_initiator_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tool:text="shit" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/label_style"
                            android:id="@+id/puddle_type_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:text="@string/type" />
                        <TextView
                           android:id="@+id/puddle_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tool:text="Blah Blah" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/label_style"
                            android:id="@+id/puddle_status_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:text="@string/status" />
                        <TextView
                            android:id="@+id/puddle_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:maxLength="100"
                            tool:text="Blah Blah" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/label_style"
                        android:id="@+id/puddle_quest_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:text="@string/Quest" />
                    <TextView
                        android:id="@+id/puddle_quest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:maxLength="100"
                        tool:text="Blah Blah"
                        android:scrollbarAlwaysDrawVerticalTrack="true"/>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</FrameLayout>